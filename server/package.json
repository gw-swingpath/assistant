{
  "name": "assistant-server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "predev": "node ./scripts/generate-build-info.mjs",
    "dev": "tsx watch src/index.ts",
    "prebuild": "node ./scripts/generate-build-info.mjs",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push --config ./drizzle.config.ts",
    "db:diff": "drizzle-kit diff --config ./drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.0.0",
    "pg": "^8.16.3",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}
