# App
PORT=4000
APP_BASE_URL=http://localhost:4000
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:5173

# Database & security
DATABASE_URL=postgres:///assistant
RETENTION_DAYS=180
TOKEN_ENCRYPTION_KEY_ID=local
# base64 of 32 random bytes, e.g. NxGUrnGZOlGlI8F7S8ZK+kYln4Th4Az6qGd5Ypwo2Co=
TOKEN_ENCRYPTION_KEY=

# Google / OAuth / ADC
GOOGLE_PROJECT_ID=
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:4000/api/oauth/google/callback
GOOGLE_APPLICATION_CREDENTIALS=./gcp-sa.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.modify
TASKS_SCOPES=https://www.googleapis.com/auth/tasks

# Pub/Sub (push only)
PUSH_ENDPOINT_PATH=/api/pubsub/push
PUBSUB_TOPIC=
PUBSUB_SUBSCRIPTION=
# Derived audience: APP_BASE_URL + PUSH_ENDPOINT_PATH (override if needed)
PUBSUB_OIDC_AUDIENCE=
PUBSUB_SERVICE_ACCOUNT_EMAIL=
# Optional project restriction
PUBSUB_PROJECT_NUMBER=
# Dev-only fallback token for local testing
PUBSUB_VERIFICATION_TOKEN=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
# Optional override
OPENAI_API_BASE=

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
# Provide exactly one of the following two
TWILIO_MESSAGING_SERVICE_SID=
TWILIO_FROM_NUMBER=
# Dev-only bootstrap destination (E.164)
TWILIO_DEFAULT_SMS_TO=
# Require explicit opt-in to allow default SMS to be used in prod
ALLOW_DEFAULT_SMS_TO_IN_PROD=false
# Optional webhook signing secret
TWILIO_WEBHOOK_SECRET=

# Feature flags (defaults true in development)
FEATURE_ENABLE_SMS=true
FEATURE_ENABLE_TASKS=true
FEATURE_ENABLE_PUSH=true
FEATURE_ENABLE_CLASSIFIER=true
